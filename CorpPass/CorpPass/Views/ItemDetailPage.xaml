<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CorpPass.Views.ItemDetailPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:CorpPass.Controls"
    xmlns:microcharts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    BackgroundColor="{StaticResource Secondary}"
    Shell.BackgroundColor="{StaticResource Secondary}"
    Shell.NavBarHasShadow="False"
    Shell.NavBarIsVisible="True"
    Visual="Material">
    <Grid>
        <StackLayout>
            <!--  Header  -->
            <StackLayout Padding="15" BackgroundColor="{StaticResource Secondary}">
                <StackLayout Orientation="Horizontal">
                    <Frame
                        Margin="0"
                        Padding="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource LightPanelBackground},
                                                          Dark={StaticResource DarkPanelBackground}}"
                        CornerRadius="15">
                        <Grid
                            Margin="0"
                            Padding="0"
                            BackgroundColor="{Binding IconModel.Accent}">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <BoxView
                                Grid.Row="0"
                                Grid.Column="0"
                                Opacity="0.75"
                                Color="{AppThemeBinding Light=White,
                                                        Dark=Black}" />
                            <Image
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="10"
                                HeightRequest="40">
                                <Image.Source>
                                    <FileImageSource File="{Binding IconModel.Name}" />
                                </Image.Source>
                            </Image>
                        </Grid>
                    </Frame>
                    <StackLayout Margin="15,0,0,0" VerticalOptions="Center">
                        <Label
                            FontAttributes="Bold"
                            FontSize="Title"
                            Text="{Binding Name}"
                            TextColor="{StaticResource DarkForegroundMain}" />

                        <Label Text="{Binding Group}" TextColor="{StaticResource DarkForegroundMain}" />
                    </StackLayout>
                    <ImageButton
                        Padding="15"
                        xct:IconTintColorEffect.TintColor="White"
                        xct:TouchEffect.NativeAnimation="True"
                        BackgroundColor="Transparent"
                        Clicked="OpenBottomSheet"
                        CornerRadius="15"
                        HorizontalOptions="EndAndExpand"
                        Source="icon_more_vertical" />
                </StackLayout>
            </StackLayout>
            <!--  Main content  -->
            <Frame
                Margin="0,0,0,-5"
                Padding="15"
                BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground},
                                                  Dark={StaticResource DarkBackground}}"
                CornerRadius="15"
                HasShadow="False"
                VerticalOptions="FillAndExpand">
                <Grid>
                    <StackLayout>
                        <ScrollView>
                            <StackLayout Spacing="15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Entry
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        BackgroundColor="{AppThemeBinding Light={StaticResource LightPanelBackground},
                                                                          Dark={StaticResource DarkPanelBackground}}"
                                        FontSize="Small"
                                        IsReadOnly="True"
                                        Placeholder="Login"
                                        PlaceholderColor="{AppThemeBinding Light={StaticResource LightForegroundSecondary},
                                                                           Dark={StaticResource DarkForegroundSecondary}}"
                                        Text="{Binding Login, Mode=TwoWay}"
                                        TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                                    Dark={StaticResource DarkForegroundMain}}" />
                                    <ImageButton
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="0"
                                        Padding="10"
                                        xct:CornerRadiusEffect.CornerRadius="15"
                                        xct:IconTintColorEffect.TintColor="{AppThemeBinding Light=Black,
                                                                                            Dark=White}"
                                        xct:TouchEffect.NativeAnimation="True"
                                        BackgroundColor="Transparent"
                                        Clicked="CopyToClipboard"
                                        CommandParameter="{Binding Login}"
                                        Source="icon_copy.xml"
                                        WidthRequest="50" />
                                </Grid>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Entry
                                        x:Name="PasswordField"
                                        Grid.Row="0"
                                        Grid.ColumnSpan="2"
                                        BackgroundColor="{AppThemeBinding Light={StaticResource LightPanelBackground},
                                                                          Dark={StaticResource DarkPanelBackground}}"
                                        FontSize="Small"
                                        IsEnabled="False"
                                        IsPassword="True"
                                        Placeholder="Password"
                                        PlaceholderColor="{AppThemeBinding Light={StaticResource LightForegroundSecondary},
                                                                           Dark={StaticResource DarkForegroundSecondary}}"
                                        Text="{Binding Password, Mode=TwoWay}"
                                        TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                                    Dark={StaticResource DarkForegroundMain}}" />
                                    <ImageButton
                                        x:Name="ShowPasswordButton"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="0"
                                        Padding="10"
                                        xct:CornerRadiusEffect.CornerRadius="15"
                                        xct:IconTintColorEffect.TintColor="{AppThemeBinding Light=Black,
                                                                                            Dark=White}"
                                        xct:TouchEffect.NativeAnimation="True"
                                        BackgroundColor="Transparent"
                                        Clicked="ChangePasswordVisibility"
                                        CommandParameter="{Binding Password}"
                                        Source="icon_show"
                                        WidthRequest="50" />
                                    <ImageButton
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Margin="0"
                                        Padding="10"
                                        xct:CornerRadiusEffect.CornerRadius="15"
                                        xct:IconTintColorEffect.TintColor="{AppThemeBinding Light=Black,
                                                                                            Dark=White}"
                                        xct:TouchEffect.NativeAnimation="True"
                                        BackgroundColor="Transparent"
                                        Clicked="CopyToClipboard"
                                        CommandParameter="{Binding Password}"
                                        Source="icon_copy.xml"
                                        WidthRequest="50" />
                                </Grid>

                                <Label
                                    FontAttributes="Bold"
                                    Text="Folder"
                                    TextColor="{AppThemeBinding Light={StaticResource LightForegroundSecondary},
                                                                Dark={StaticResource DarkForegroundSecondary}}" />

                                <FlexLayout>
                                    <Frame
                                        Padding="15,5"
                                        BackgroundColor="{AppThemeBinding Light={StaticResource LightPanelBackground},
                                                                          Dark={StaticResource DarkPanelBackground}}"
                                        HasShadow="False">
                                        <Label
                                            xct:CornerRadiusEffect.CornerRadius="15"
                                            BackgroundColor="{AppThemeBinding Light={StaticResource LightPanelBackground},
                                                                              Dark={StaticResource DarkPanelBackground}}"
                                            FontSize="Small"
                                            Text="{Binding Folder, Mode=TwoWay}"
                                            TextColor="{Binding IconModel.Accent}" />
                                    </Frame>
                                </FlexLayout>

                                <!--  Microcharts  -->
                                <Label
                                    FontAttributes="Bold"
                                    Text="Password health"
                                    TextColor="{AppThemeBinding Light={StaticResource LightForegroundSecondary},
                                                                Dark={StaticResource DarkForegroundSecondary}}" />
                                <StackLayout Orientation="Horizontal">
                                    <microcharts:ChartView
                                        x:Name="chartView"
                                        Chart="{Binding Chart}"
                                        HeightRequest="200"
                                        WidthRequest="190" />
                                    <StackLayout VerticalOptions="CenterAndExpand">
                                        <StackLayout Orientation="Horizontal">
                                            <StackLayout>
                                                <Label
                                                    Padding="0,15,0,0"
                                                    FontAttributes="Bold"
                                                    FontSize="Medium"
                                                    Text="Password Score:"
                                                    TextColor="{AppThemeBinding Light=Black,
                                                                                Dark=White}"
                                                    VerticalOptions="FillAndExpand" />
                                            </StackLayout>
                                            <StackLayout>
                                                <Label
                                                    Padding="0,15,0,0"
                                                    FontAttributes="Bold"
                                                    FontSize="Medium"
                                                    Text="{Binding PasswordScore, Mode=OneWay}"
                                                    TextColor="{AppThemeBinding Light=Black,
                                                                                Dark=White}"
                                                    VerticalOptions="FillAndExpand" />
                                            </StackLayout>
                                        </StackLayout>
                                        <StackLayout Orientation="Horizontal">
                                            <StackLayout>
                                                <Label
                                                    Text="Password strenght:"
                                                    TextColor="{AppThemeBinding Light=Black,
                                                                                Dark=White}"
                                                    VerticalOptions="FillAndExpand" />
                                            </StackLayout>
                                            <StackLayout>
                                                <Label
                                                    x:Name="PasswordStrengthText"
                                                    FontAttributes="Bold"
                                                    Text="{Binding PasswordStrenght}"
                                                    TextColor="{AppThemeBinding Light=Black,
                                                                                Dark=White}" />
                                            </StackLayout>
                                        </StackLayout>

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <StackLayout
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Padding="15,5"
                                                xct:CornerRadiusEffect.CornerRadius="5"
                                                BackgroundColor="{StaticResource NormalBackground}"
                                                Orientation="Horizontal">
                                                <StackLayout Orientation="Horizontal">
                                                    <Image
                                                        Margin="5"
                                                        xct:IconTintColorEffect.TintColor="{StaticResource NormalBackgroundIcon}"
                                                        HeightRequest="20"
                                                        Source="icon_shield_done"
                                                        WidthRequest="20" />
                                                    <Label
                                                        FontAttributes="Bold"
                                                        Text="Password isn`t leaked"
                                                        TextColor="{StaticResource NormalBackgroundIcon}"
                                                        VerticalOptions="CenterAndExpand" />
                                                </StackLayout>
                                            </StackLayout>
                                            <StackLayout
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Padding="15,5"
                                                xct:CornerRadiusEffect.CornerRadius="5"
                                                BackgroundColor="{StaticResource DangerBackground}"
                                                IsVisible="{Binding IsLeaked}"
                                                Orientation="Horizontal">
                                                <StackLayout
                                                    HorizontalOptions="FillAndExpand"
                                                    Orientation="Horizontal"
                                                    VerticalOptions="CenterAndExpand">
                                                    <Image
                                                        Margin="5"
                                                        xct:IconTintColorEffect.TintColor="{StaticResource DangerBackgroundIcon}"
                                                        HeightRequest="20"
                                                        Source="icon_shield_error"
                                                        WidthRequest="20" />
                                                    <Label
                                                        FontAttributes="Bold"
                                                        Text="Password is leaked"
                                                        TextColor="{StaticResource DangerBackgroundIcon}"
                                                        VerticalOptions="CenterAndExpand" />
                                                </StackLayout>
                                            </StackLayout>
                                        </Grid>
                                    </StackLayout>
                                </StackLayout>

                                <Label
                                    FontAttributes="Bold"
                                    Text="Last modified"
                                    TextColor="{AppThemeBinding Light={StaticResource LightForegroundSecondary},
                                                                Dark={StaticResource DarkForegroundSecondary}}" />
                                <Label
                                    FontSize="Small"
                                    Text="{Binding LastModified, Mode=TwoWay}"
                                    TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                                Dark={StaticResource DarkForegroundMain}}" />
                                <Label
                                    FontAttributes="Bold"
                                    Text="Created"
                                    TextColor="{AppThemeBinding Light={StaticResource LightForegroundSecondary},
                                                                Dark={StaticResource DarkForegroundSecondary}}" />
                                <Label
                                    FontSize="Small"
                                    Text="{Binding Created, Mode=TwoWay}"
                                    TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                                Dark={StaticResource DarkForegroundMain}}" />
                                <Label
                                    FontAttributes="Bold"
                                    Text="Description"
                                    TextColor="{AppThemeBinding Light={StaticResource LightForegroundSecondary},
                                                                Dark={StaticResource DarkForegroundSecondary}}" />
                                <Label
                                    FontSize="Small"
                                    Text="{Binding Description, Mode=TwoWay}"
                                    TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                                Dark={StaticResource DarkForegroundMain}}" />
                            </StackLayout>
                        </ScrollView>
                    </StackLayout>
                </Grid>
            </Frame>
        </StackLayout>
        <controls:BottomSheet x:Name="Sheet" SheetHeight="250">
            <controls:BottomSheet.SheetContent>
                <StackLayout>
                    <Entry
                        x:Name="SelectedItemID"
                        IsVisible="False"
                        Text="{Binding Id}" />
                    <CollectionView ItemsSource="{Binding BottomSheetItems}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid
                                    x:Name="SheetItem"
                                    Padding="15"
                                    xct:TouchEffect.Command="{Binding ItemCommand}"
                                    xct:TouchEffect.CommandParameter="{Binding Text, Source={x:Reference SelectedItemID}}"
                                    xct:TouchEffect.NativeAnimation="True">

                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="CloseBottomSheet" />
                                    </Grid.GestureRecognizers>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        xct:IconTintColorEffect.TintColor="{AppThemeBinding Light=Black,
                                                                                            Dark=White}"
                                        Source="{Binding Icon}" />
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Padding="15,0"
                                        FontSize="16"
                                        Style="{DynamicResource ListItemTextStyle}"
                                        Text="{Binding Name}"
                                        TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                                    Dark={StaticResource DarkForegroundMain}}"
                                        VerticalOptions="CenterAndExpand" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </controls:BottomSheet.SheetContent>
        </controls:BottomSheet>
    </Grid>
</ContentPage>