<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CorpPass.Views.ItemDetailPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground},
                                      Dark={StaticResource DarkBackground}}"
    Shell.NavBarIsVisible="False"
    Shell.PresentationMode="ModalAnimated"
    Visual="Material">

    <StackLayout>
        <!--  Header  -->
        <StackLayout
            x:Name="NewItemHeader"
            Padding="25,25,25,200"
            BackgroundColor="{StaticResource Secondary}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackLayout
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Padding="0,10,0,30"
                    BackgroundColor="{StaticResource Secondary}">
                    <BoxView
                        BackgroundColor="Gray"
                        CornerRadius="5"
                        HeightRequest="5"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="150" />

                    <StackLayout.GestureRecognizers>
                        <SwipeGestureRecognizer Direction="Down" Swiped="GoBack" />
                    </StackLayout.GestureRecognizers>
                </StackLayout>

                <Frame
                    Grid.Row="1"
                    Grid.Column="0"
                    BackgroundColor="White"
                    CornerRadius="15">
                    <Image
                        HeightRequest="25"
                        Source="icon_details.xml"
                        WidthRequest="25" />
                </Frame>

                <StackLayout
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="15,0,0,0"
                    VerticalOptions="Center">
                    <Label
                        FontAttributes="Bold"
                        FontSize="Title"
                        Text="Details"
                        TextColor="{StaticResource DarkForegroundMain}" />
                </StackLayout>

            </Grid>
        </StackLayout>
        <!--  Main content  -->
        <Frame
            Margin="15,-175,15,15"
            Padding="25"
            BackgroundColor="{AppThemeBinding Light={StaticResource LightPanelBackground},
                                              Dark={StaticResource DarkPanelBackground}}"
            CornerRadius="15"
            HasShadow="True">
            <StackLayout>
                <ScrollView>
                    <StackLayout Spacing="15">
                        <Entry
                            BackgroundColor="{AppThemeBinding Light={StaticResource ItemBackgroundOnLightBackground},
                                                              Dark={StaticResource ItemBackgroundOnDarkBackground}}"
                            FontSize="Default"
                            IsReadOnly="True"
                            Placeholder="Name"
                            PlaceholderColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                               Dark={StaticResource DarkForegroundMain}}"
                            Text="{Binding Name, Mode=TwoWay}"
                            TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                        Dark={StaticResource DarkForegroundMain}}" />
                        <Entry
                            BackgroundColor="{AppThemeBinding Light={StaticResource ItemBackgroundOnLightBackground},
                                                              Dark={StaticResource ItemBackgroundOnDarkBackground}}"
                            FontSize="Default"
                            IsReadOnly="True"
                            Placeholder="Login"
                            PlaceholderColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                               Dark={StaticResource DarkForegroundMain}}"
                            Text="{Binding Login, Mode=TwoWay}"
                            TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                        Dark={StaticResource DarkForegroundMain}}" />
                        <Entry
                            BackgroundColor="{AppThemeBinding Light={StaticResource ItemBackgroundOnLightBackground},
                                                              Dark={StaticResource ItemBackgroundOnDarkBackground}}"
                            FontSize="Default"
                            IsReadOnly="True"
                            Placeholder="Password"
                            PlaceholderColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                               Dark={StaticResource DarkForegroundMain}}"
                            Text="{Binding Login, Mode=TwoWay}"
                            TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                        Dark={StaticResource DarkForegroundMain}}" />
                        <Entry
                            BackgroundColor="{AppThemeBinding Light={StaticResource ItemBackgroundOnLightBackground},
                                                              Dark={StaticResource ItemBackgroundOnDarkBackground}}"
                            FontSize="Default"
                            IsReadOnly="True"
                            Placeholder="Group"
                            PlaceholderColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                               Dark={StaticResource DarkForegroundMain}}"
                            Text="{Binding Group, Mode=TwoWay}"
                            TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                        Dark={StaticResource DarkForegroundMain}}" />
                        <Entry
                            BackgroundColor="{AppThemeBinding Light={StaticResource ItemBackgroundOnLightBackground},
                                                              Dark={StaticResource ItemBackgroundOnDarkBackground}}"
                            FontSize="Default"
                            IsReadOnly="True"
                            Placeholder="Folder"
                            PlaceholderColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                               Dark={StaticResource DarkForegroundMain}}"
                            Text="{Binding Folder, Mode=TwoWay}"
                            TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                        Dark={StaticResource DarkForegroundMain}}" />
                        <Editor
                            BackgroundColor="{AppThemeBinding Light={StaticResource ItemBackgroundOnLightBackground},
                                                              Dark={StaticResource ItemBackgroundOnDarkBackground}}"
                            FontSize="Default"
                            IsReadOnly="True"
                            Placeholder="Description"
                            PlaceholderColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                               Dark={StaticResource DarkForegroundMain}}"
                            Text="{Binding Description, Mode=TwoWay}"
                            TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                        Dark={StaticResource DarkForegroundMain}}" />
                    </StackLayout>
                </ScrollView>
            </StackLayout>
        </Frame>
    </StackLayout>

</ContentPage>