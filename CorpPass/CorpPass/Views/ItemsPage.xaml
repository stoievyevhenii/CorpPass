<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="CorpPass.Views.ItemsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:CorpPass.Controls"
    xmlns:local="clr-namespace:CorpPass.ViewModels"
    xmlns:model="clr-namespace:CorpPass.Models"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    x:Name="BrowseItemsPage"
    BackgroundColor="{StaticResource Secondary}"
    Shell.NavBarIsVisible="False"
    Visual="Material">
    <StackLayout>
        <Frame
            Margin="0"
            Padding="15"
            BackgroundColor="{StaticResource Secondary}"
            CornerRadius="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ImageButton
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="5,0"
                    Padding="5"
                    xct:CornerRadiusEffect.CornerRadius="15"
                    xct:TouchEffect.NativeAnimation="True"
                    BackgroundColor="Transparent"
                    Command="{Binding MenuPageRedirect}"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    Source="icon_menu.xml"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="40" />

                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    Text="Passwords"
                    TextColor="White"
                    VerticalOptions="CenterAndExpand">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="GoToFirstElement" />
                    </Label.GestureRecognizers>
                </Label>

                <ImageButton
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="5,0"
                    Padding="5"
                    xct:CornerRadiusEffect.CornerRadius="15"
                    xct:TouchEffect.NativeAnimation="True"
                    BackgroundColor="Transparent"
                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:ItemsViewModel}}, Path=SearchPageRedirect}"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    Source="icon_search.xml"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="40" />
            </Grid>
        </Frame>
        <xct:TabView
            IsSwipeEnabled="True"
            TabIndicatorHeight="5"
            TabIndicatorPlacement="Bottom"
            TabIndicatorWidth="128">
            <xct:TabView.TabIndicatorView>
                <BoxView xct:CornerRadiusEffect.CornerRadius="15,15,15,15" BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
            </xct:TabView.TabIndicatorView>

            <xct:TabView.TabStripBackgroundView>
                <BoxView BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}" CornerRadius="15,15,0,0" />
            </xct:TabView.TabStripBackgroundView>
            <xct:TabViewItem
                Text="ALL"
                TextColor="{AppThemeBinding Light={StaticResource LightForegroundSecondary},
                                            Dark={StaticResource DarkForegroundSecondary}}"
                TextColorSelected="{AppThemeBinding Light={StaticResource Primary},
                                                    Dark={StaticResource PrimaryDark}}">
                <Grid>
                    <AbsoluteLayout
                        Margin="0,40,0,0"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand">
                        <StackLayout
                            AbsoluteLayout.LayoutBounds="0,0,1,1"
                            AbsoluteLayout.LayoutFlags="All"
                            BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground},
                                                              Dark={StaticResource DarkBackground}}">
                            <!--  Items list  -->
                            <RefreshView
                                Command="{Binding LoadItemsCommand}"
                                IsRefreshing="{Binding IsBusy}"
                                RefreshColor="{StaticResource Primary}">
                                <CollectionView
                                    x:Name="ItemsListView"
                                    Margin="15,15"
                                    IsGrouped="True"
                                    ItemsSource="{Binding GroupedItems}"
                                    SelectionMode="None">
                                    <CollectionView.GroupHeaderTemplate>
                                        <DataTemplate>
                                            <StackLayout>
                                                <Label
                                                    Margin="00"
                                                    Padding="15,5"
                                                    FontAttributes="Bold"
                                                    FontSize="Large"
                                                    Text="{Binding Name}"
                                                    TextColor="{AppThemeBinding Light={StaticResource DarkTitle},
                                                                                Dark={StaticResource LightTitle}}" />
                                                <BoxView
                                                    Margin="0,0,0,-20"
                                                    xct:CornerRadiusEffect.CornerRadius="15,15,0,0"
                                                    BackgroundColor="{AppThemeBinding Light={StaticResource LightPanelBackground},
                                                                                      Dark={StaticResource DarkPanelBackground}}" />

                                            </StackLayout>
                                        </DataTemplate>
                                    </CollectionView.GroupHeaderTemplate>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid BackgroundColor="{AppThemeBinding Light={StaticResource LightPanelBackground}, Dark={StaticResource DarkPanelBackground}}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Grid
                                                    Grid.Column="0"
                                                    Padding="15,10"
                                                    xct:TouchEffect.Command="{Binding Source={RelativeSource AncestorType={x:Type local:ItemsViewModel}}, Path=ItemTapped}"
                                                    xct:TouchEffect.CommandParameter="{Binding .}"
                                                    xct:TouchEffect.NativeAnimation="True">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <Frame
                                                        Grid.RowSpan="2"
                                                        Grid.Column="0"
                                                        Padding="10"
                                                        BackgroundColor="{AppThemeBinding Light={StaticResource ItemBackgroundOnLightBackground},
                                                                                          Dark={StaticResource ItemBackgroundOnDarkBackground}}"
                                                        CornerRadius="15"
                                                        HasShadow="True"
                                                        HorizontalOptions="Center"
                                                        VerticalOptions="Fill"
                                                        WidthRequest="45">
                                                        <Label
                                                            FontSize="20"
                                                            HorizontalOptions="Center"
                                                            Text="A"
                                                            TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                                                        Dark={StaticResource DarkForegroundMain}}"
                                                            VerticalOptions="CenterAndExpand" />
                                                    </Frame>

                                                    <Label
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        Margin="0,10,0,0"
                                                        Padding="5,0"
                                                        FontAttributes="Bold"
                                                        FontSize="Medium"
                                                        LineBreakMode="NoWrap"
                                                        Style="{DynamicResource ListItemTextStyle}"
                                                        Text="{Binding Name}"
                                                        TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                                                    Dark={StaticResource DarkForegroundMain}}"
                                                        VerticalOptions="FillAndExpand" />
                                                    <Label
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        Margin="0,0,0,10"
                                                        Padding="5,0"
                                                        FontSize="Small"
                                                        LineBreakMode="NoWrap"
                                                        Style="{DynamicResource ListItemDetailTextStyle}"
                                                        Text="{Binding Login}"
                                                        TextColor="{AppThemeBinding Light={StaticResource LightForegroundSecondary},
                                                                                    Dark={StaticResource DarkForegroundSecondary}}"
                                                        VerticalOptions="FillAndExpand" />
                                                </Grid>
                                                <ImageButton
                                                    Grid.Column="1"
                                                    Padding="15,5"
                                                    xct:IconTintColorEffect.TintColor="{AppThemeBinding Light=Black,
                                                                                                        Dark=White}"
                                                    xct:TouchEffect.NativeAnimation="True"
                                                    BackgroundColor="Transparent"
                                                    Clicked="OpenBottomSheet"
                                                    CommandParameter="{Binding Id}"
                                                    CornerRadius="15"
                                                    Source="icon_more_vertical" />
                                            </Grid>

                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                    <CollectionView.GroupFooterTemplate>
                                        <DataTemplate>
                                            <StackLayout>
                                                <BoxView
                                                    Margin="0,-20,0,0"
                                                    xct:CornerRadiusEffect.CornerRadius="0,0,15,15"
                                                    BackgroundColor="{AppThemeBinding Light={StaticResource LightPanelBackground},
                                                                                      Dark={StaticResource DarkPanelBackground}}" />
                                                <BoxView BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}" HeightRequest="5" />
                                            </StackLayout>
                                        </DataTemplate>
                                    </CollectionView.GroupFooterTemplate>
                                    <CollectionView.EmptyView>
                                        <ContentView>
                                            <Grid HorizontalOptions="Center" VerticalOptions="Center">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="100" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>

                                                <Image Grid.Row="0" Source="icon_empty" />
                                                <Label
                                                    Grid.Row="1"
                                                    FontSize="12"
                                                    HorizontalOptions="Fill"
                                                    HorizontalTextAlignment="Center"
                                                    Text="Nothing to show here! Sooryyyyy!" />
                                            </Grid>
                                        </ContentView>
                                    </CollectionView.EmptyView>
                                </CollectionView>
                            </RefreshView>
                        </StackLayout>
                        <!--  Float button  -->
                        <ImageButton
                            x:Name="FloatAddButton"
                            Margin="25"
                            Padding="15"
                            AbsoluteLayout.LayoutBounds="1,1,AutoSize,AutoSize"
                            AbsoluteLayout.LayoutFlags="PositionProportional"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Primary},
                                                              Dark={StaticResource PrimaryDark}}"
                            Command="{Binding AddItemCommand}"
                            CornerRadius="100"
                            Source="icon_add.xml" />
                    </AbsoluteLayout>
                    <controls:BottomSheet x:Name="Sheet" SheetHeight="250">
                        <controls:BottomSheet.SheetContent>
                            <StackLayout>
                                <Entry x:Name="SelectedItemID" IsVisible="False" />
                                <CollectionView ItemsSource="{Binding BottomSheetItems}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid
                                                x:Name="SheetItem"
                                                Padding="15"
                                                xct:TouchEffect.Command="{Binding ItemCommand}"
                                                xct:TouchEffect.CommandParameter="{Binding Text, Source={x:Reference SelectedItemID}}"
                                                xct:TouchEffect.NativeAnimation="True">

                                                <Grid.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="CloseBottomSheet" />
                                                </Grid.GestureRecognizers>

                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Image
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    xct:IconTintColorEffect.TintColor="{AppThemeBinding Light=Black,
                                                                                                        Dark=White}"
                                                    Source="{Binding Icon}" />
                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    Padding="15,0"
                                                    FontSize="16"
                                                    Style="{DynamicResource ListItemTextStyle}"
                                                    Text="{Binding Name}"
                                                    TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                                                Dark={StaticResource DarkForegroundMain}}"
                                                    VerticalOptions="CenterAndExpand" />
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </StackLayout>
                        </controls:BottomSheet.SheetContent>
                    </controls:BottomSheet>
                </Grid>
            </xct:TabViewItem>
            <xct:TabViewItem
                Text="Favorites"
                TextColor="{AppThemeBinding Light={StaticResource LightForegroundSecondary},
                                            Dark={StaticResource DarkForegroundSecondary}}"
                TextColorSelected="{AppThemeBinding Light={StaticResource Primary},
                                                    Dark={StaticResource PrimaryDark}}">
                <StackLayout
                    Margin="0,40,0,0"
                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All"
                    BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground},
                                                      Dark={StaticResource DarkBackground}}">
                    <RefreshView
                        Command="{Binding LoadFavoriteItemsCommand}"
                        IsRefreshing="{Binding IsFavoriteBusy}"
                        RefreshColor="{StaticResource Primary}">
                        <CollectionView
                            x:Name="FavoriteItemsListView"
                            Margin="15,15"
                            IsGrouped="True"
                            ItemsSource="{Binding GroupedFavoriteItems}"
                            SelectionMode="None">
                            <CollectionView.GroupHeaderTemplate>
                                <DataTemplate>
                                    <StackLayout>
                                        <Label
                                            Margin="00"
                                            Padding="15,5"
                                            FontAttributes="Bold"
                                            FontSize="Large"
                                            Text="{Binding Name}"
                                            TextColor="{AppThemeBinding Light={StaticResource DarkTitle},
                                                                        Dark={StaticResource LightTitle}}" />
                                        <BoxView
                                            Margin="0,0,0,-20"
                                            xct:CornerRadiusEffect.CornerRadius="15,15,0,0"
                                            BackgroundColor="{AppThemeBinding Light={StaticResource LightPanelBackground},
                                                                              Dark={StaticResource DarkPanelBackground}}" />

                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.GroupHeaderTemplate>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid BackgroundColor="{AppThemeBinding Light={StaticResource LightPanelBackground}, Dark={StaticResource DarkPanelBackground}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid
                                            Grid.Column="0"
                                            Padding="15,10"
                                            xct:TouchEffect.Command="{Binding Source={RelativeSource AncestorType={x:Type local:ItemsViewModel}}, Path=ItemTapped}"
                                            xct:TouchEffect.CommandParameter="{Binding .}"
                                            xct:TouchEffect.NativeAnimation="True">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Frame
                                                Grid.RowSpan="2"
                                                Grid.Column="0"
                                                Padding="10"
                                                BackgroundColor="{AppThemeBinding Light={StaticResource ItemBackgroundOnLightBackground},
                                                                                  Dark={StaticResource ItemBackgroundOnDarkBackground}}"
                                                CornerRadius="15"
                                                HasShadow="True"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Fill"
                                                WidthRequest="45">
                                                <Label
                                                    FontSize="20"
                                                    HorizontalOptions="Center"
                                                    Text="A"
                                                    TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                                                Dark={StaticResource DarkForegroundMain}}"
                                                    VerticalOptions="CenterAndExpand" />
                                            </Frame>

                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="0,10,0,0"
                                                Padding="5,0"
                                                FontAttributes="Bold"
                                                FontSize="Medium"
                                                LineBreakMode="NoWrap"
                                                Style="{DynamicResource ListItemTextStyle}"
                                                Text="{Binding Name}"
                                                TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                                            Dark={StaticResource DarkForegroundMain}}"
                                                VerticalOptions="FillAndExpand" />
                                            <Label
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Margin="0,0,0,10"
                                                Padding="5,0"
                                                FontSize="Small"
                                                LineBreakMode="NoWrap"
                                                Style="{DynamicResource ListItemDetailTextStyle}"
                                                Text="{Binding Login}"
                                                TextColor="{AppThemeBinding Light={StaticResource LightForegroundSecondary},
                                                                            Dark={StaticResource DarkForegroundSecondary}}"
                                                VerticalOptions="FillAndExpand" />
                                        </Grid>
                                    </Grid>

                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                            <CollectionView.GroupFooterTemplate>
                                <DataTemplate>
                                    <StackLayout>
                                        <BoxView
                                            Margin="0,-20,0,0"
                                            xct:CornerRadiusEffect.CornerRadius="0,0,15,15"
                                            BackgroundColor="{AppThemeBinding Light={StaticResource LightPanelBackground},
                                                                              Dark={StaticResource DarkPanelBackground}}" />
                                        <BoxView BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}" HeightRequest="5" />
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.GroupFooterTemplate>
                            <CollectionView.EmptyView>
                                <ContentView>
                                    <Grid HorizontalOptions="Center" VerticalOptions="Center">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="100" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Image Grid.Row="0" Source="icon_empty" />
                                        <Label
                                            Grid.Row="1"
                                            FontSize="12"
                                            HorizontalOptions="Fill"
                                            HorizontalTextAlignment="Center"
                                            Text="Nothing to show here! Sooryyyyy!" />
                                    </Grid>
                                </ContentView>
                            </CollectionView.EmptyView>
                        </CollectionView>
                    </RefreshView>
                </StackLayout>
            </xct:TabViewItem>
        </xct:TabView>
    </StackLayout>
</ContentPage>
