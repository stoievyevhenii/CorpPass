<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CorpPass.Views.DBConnectionPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    ios:Page.UseSafeArea="true"
    BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground},
                                      Dark={StaticResource DarkBackground}}"
    Shell.NavBarIsVisible="False"
    Visual="Material">

    <ContentPage.Content>
        <StackLayout>
            <StackLayout
                x:Name="NewItemHeader"
                Padding="25,25,25,200"
                BackgroundColor="{StaticResource Secondary}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackLayout
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Padding="0,10,0,30"
                        BackgroundColor="{StaticResource Secondary}">
                        <BoxView
                            BackgroundColor="Gray"
                            CornerRadius="5"
                            HeightRequest="5"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            WidthRequest="150" />

                        <StackLayout.GestureRecognizers>
                            <SwipeGestureRecognizer Direction="Down" Swiped="GoBack" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>

                    <Frame
                        Grid.Row="1"
                        Grid.Column="0"
                        BackgroundColor="White"
                        CornerRadius="15">
                        <Image
                            HeightRequest="25"
                            Source="icon_dbconnection.xml"
                            WidthRequest="25" />
                    </Frame>

                    <StackLayout
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="15,0,0,0"
                        VerticalOptions="Center">
                        <Label
                            FontAttributes="Bold"
                            FontSize="Title"
                            Text="Connect to DB"
                            TextColor="{StaticResource DarkForegroundMain}" />
                    </StackLayout>

                </Grid>
            </StackLayout>

            <Frame
                Margin="15,-175,15,15"
                Padding="25"
                BackgroundColor="{AppThemeBinding Light={StaticResource LightPanelBackground},
                                                  Dark={StaticResource DarkPanelBackground}}"
                CornerRadius="15"
                HasShadow="True">
                <StackLayout>
                    <ScrollView>
                        <StackLayout Spacing="15">
                            <Entry
                                BackgroundColor="{AppThemeBinding Light={StaticResource ItemBackgroundOnLightBackground},
                                                                  Dark={StaticResource ItemBackgroundOnDarkBackground}}"
                                FontSize="Default"
                                Placeholder="Server address"
                                PlaceholderColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                                   Dark={StaticResource DarkForegroundMain}}"
                                Text="{Binding ServerAddress, Mode=TwoWay}"
                                TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                            Dark={StaticResource DarkForegroundMain}}" />
                            <Entry
                                BackgroundColor="{AppThemeBinding Light={StaticResource ItemBackgroundOnLightBackground},
                                                                  Dark={StaticResource ItemBackgroundOnDarkBackground}}"
                                FontSize="Default"
                                Placeholder="Login"
                                PlaceholderColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                                   Dark={StaticResource DarkForegroundMain}}"
                                Text="{Binding UserName, Mode=TwoWay}"
                                TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                            Dark={StaticResource DarkForegroundMain}}" />
                            <Entry
                                BackgroundColor="{AppThemeBinding Light={StaticResource ItemBackgroundOnLightBackground},
                                                                  Dark={StaticResource ItemBackgroundOnDarkBackground}}"
                                FontSize="Default"
                                IsPassword="True"
                                Placeholder="Password"
                                PlaceholderColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                                   Dark={StaticResource DarkForegroundMain}}"
                                Text="{Binding Password, Mode=TwoWay}"
                                TextColor="{AppThemeBinding Light={StaticResource LightForegroundMain},
                                                            Dark={StaticResource DarkForegroundMain}}" />
                        </StackLayout>
                    </ScrollView>

                    <StackLayout Orientation="Horizontal">
                        <Button
                            Padding="10"
                            Command="{Binding SaveCommand}"
                            HorizontalOptions="FillAndExpand"
                            Text="Connect" />
                    </StackLayout>
                </StackLayout>
            </Frame>

        </StackLayout>

    </ContentPage.Content>

</ContentPage>